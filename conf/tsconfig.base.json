{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "declaration": true,
        "declarationMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "es5",
        "lib": ["es2015"]
    },
    "include": [
        "../src/**/*"
    ],
    "exclude": [
        "../node_modules"
    ]
}